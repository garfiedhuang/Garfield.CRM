<?xml version="1.0"?>
<configuration>
  <appSettings>
    <!--连接字符串是否加密-->
    <add key="ConStringEncrypt" value="false"/>
    <!--连接字符串,(可以扩展支持不同数据库)如果是加密方式，上面一项要设置为true，否则设置为false-->
    <!--<add key="ConnectionString" value="server=.\Bill2013;database=Garfield_CRM_V2;uid=sa;pwd=Bill2013"/>-->
    <add key="ConnectionString" value="Server=127.0.0.1;charset=utf8;Port=3306;Database=Garfield_CRM_V2;Uid=root;Pwd=abc123!!" />
    <!--是否已配置完毕-->
    <add key="CompleteConfig" value="true"/>
  </appSettings>
  <system.web>
    <compilation debug="true" targetFramework="4.5"/>
    <authentication mode="Forms">
      <forms name="garfield_Auth" loginUrl="login.aspx" protection="All" path="/"/>
    </authentication>
    <!-- 如果使用.NET4.0模式，系统提示检测到潜在的危险request.form值，请使用下面的配置 -->
     <httpRuntime requestValidationMode="2.0" maxRequestLength="109600" executionTimeout="600"/> 
    <!--<httpRuntime maxRequestLength="109600" executionTimeout="600"/>-->
    <pages validateRequest="false" controlRenderingCompatibilityVersion="3.5" clientIDMode="AutoID"/>
  </system.web>
  
  <!-- set secure paths -->
  <location path="main.aspx">
    <system.web>
      <authorization>
        <deny users="?"/>
      </authorization>
    </system.web>
  </location>
  <location path="HR">
    <system.web>
      <authorization>
        <deny users="?"/>
      </authorization>
    </system.web>
  </location>
  <location path="CRM">
    <system.web>
      <authorization>
        <deny users="?"/>
      </authorization>
    </system.web>
  </location>
  <location path="DMS">
    <system.web>
      <authorization>
        <deny users="?"/>
      </authorization>
    </system.web>
  </location>
  <location path="OA">
    <system.web>
      <authorization>
        <deny users="?"/>
      </authorization>
    </system.web>
  </location>
  <location path="Personal">
    <system.web>
      <authorization>
        <deny users="?"/>
      </authorization>
    </system.web>
  </location>
  <location path="ReportForm">
    <system.web>
      <authorization>
        <deny users="?"/>
      </authorization>
    </system.web>
  </location>
  <location path="System">
    <system.web>
      <authorization>
        <deny users="?"/>
      </authorization>
    </system.web>
  </location>
  <location path="Toolbar">
    <system.web>
      <authorization>
        <deny users="?"/>
      </authorization>
    </system.web>
  </location>
  <location path="ueditor1_2_5-1-utf8-net">
    <system.web>
      <authorization>
        <deny users="?"/>
      </authorization>
    </system.web>
  </location>
  <location path="file">
    <system.web>
      <authorization>
        <deny users="?"/>
      </authorization>
    </system.web>
  </location>
  <location path="mail">
    <system.web>
      <authorization>
        <deny users="?"/>
      </authorization>
    </system.web>
  </location>
  <location path="CSS">
    <system.web>
      <authorization>
        <allow users="*"/>
      </authorization>
    </system.web>
  </location>
  <location path="JS">
    <system.web>
      <authorization>
        <allow users="*"/>
      </authorization>
    </system.web>
  </location>
  <location path="Images">
    <system.web>
      <authorization>
        <allow users="*"/>
      </authorization>
    </system.web>
  </location>
  <location path="lib">
    <system.web>
      <authorization>
        <allow users="*"/>
      </authorization>
    </system.web>
  </location>

  <system.webServer>
    <handlers>
      <!--ajaxpro-->
      <add name="ajaxpro" verb="post,get" path="ajaxpro/*.ashx" type="ajaxpro.ajaxhandlerfactory,ajaxpro"/>
    </handlers>
    <directoryBrowse enabled="false"/>
    <!--取消文件目录浏览-->
  </system.webServer>
</configuration>                                                     